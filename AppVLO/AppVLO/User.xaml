<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppVLO.User"
            Icon="user.png">
    
    <StackLayout>
    <StackLayout BackgroundColor="#0B5894" Padding="0,20,0,20">

        <Label Text="PERFIL DE USUARIO" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>

    </StackLayout>

        <Frame Padding="10,10,10,10" CornerRadius="30" BorderColor="#0B5894" Margin="10,10,10,10" >
            <ScrollView>
                <Grid Visual="Default" Padding="10,10,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Text="NOMBRE COMPLETO" FontAttributes="Bold" VerticalOptions="Center" TextColor="Black"
                           FontSize="20" Grid.Row="0" Grid.Column="0" HorizontalTextAlignment="Start" Grid.ColumnSpan="4"/>
                    
                    <Label x:Name="lblNombre" Text="" VerticalOptions="Center" TextColor="Black" FontSize="20" Grid.Row="1"
                           Grid.Column="1" HorizontalTextAlignment="Start" Grid.ColumnSpan="3"/>

                    <Label Text="ID USUARIO" FontAttributes="Bold" VerticalOptions="Center" TextColor="Black" FontSize="20"
                           Grid.Row="2" Grid.Column="0" HorizontalTextAlignment="Start" Grid.ColumnSpan="4"/>
                    
                    <Label x:Name="lblUser" Text="" VerticalOptions="Center" TextColor="Black" FontSize="20" Grid.Row="3"
                           Grid.Column="1" HorizontalTextAlignment="Start" Grid.ColumnSpan="3"/>

                    <Label Text="ROL DE USUARIO" FontAttributes="Bold" VerticalOptions="Center" TextColor="Black"
                           FontSize="20" Grid.Row="4" Grid.Column="0" HorizontalTextAlignment="Start" Grid.ColumnSpan="4"/>
                    
                    <Label x:Name="lblRol" Text="" VerticalOptions="Center" TextColor="Black" FontSize="20"
                           Grid.Row="5" Grid.Column="1" HorizontalTextAlignment="Start" Grid.ColumnSpan="3"/>

                    <Button x:Name="Salir" Text="Cerrar Sesion" BackgroundColor="#0B5894"
                            TextColor="White" VerticalOptions="Center" HorizontalOptions="FillAndExpand"
                            Clicked="Salir_Clicked" BorderWidth="20" Grid.Row="7" Grid.Column="1"
                            Grid.ColumnSpan="2" CornerRadius="30"/>
                </Grid>
            </ScrollView>
        </Frame>
    </StackLayout>
