<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppVLO.OpcionMenu">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Menus"  FontSize="30" HorizontalOptions="Center" 
                   VerticalOptions="Center" Margin="20"/>
            <ListView x:Name="listOMenus" SeparatorVisibility="None" HasUnevenRows="True">
                <ListView.ItemTemplate>
                <DataTemplate >
                    <ViewCell>
                            <StackLayout BackgroundColor="OrangeRed" Margin="10" Padding="10">
                                <Label Text="{Binding Nombre}" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"
                           VerticalTextAlignment="Center" HorizontalTextAlignment="Center"
                           TextColor="Black"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>